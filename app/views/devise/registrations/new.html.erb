<div class="panel panel-info">
	
	<div class="panel-heading">
		<h2 class="hgray">Sign up</h2>
	</div>
	
	<div class="panel-body">
		
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

			<div class="field form-group">
				<%= f.label :email %><br />
				<%= f.email_field :email, autofocus: true, placeholder:"Enter email", class:"form-control" %>
			</div>

			<div class="field form-group">
				<%= f.label :password %>
				<% if @validatable %>
				<em>(<%= @minimum_password_length %> characters minimum)</em>
				<% end %><br />
				<%= f.password_field :password, autocomplete: "off", placeholder:"Enter password", class:"form-control" %>
			</div>

			<!--<div class="field">
						<!--<%= f.label :password_confirmation %><br />
						<!--<%= f.password_field :password_confirmation, autocomplete: "off" %>
				</div>
			-->

		  <div class="actions form-group">
			 <%= f.submit "Sign up", class:"btn btn-primary" %>
		  </div>

		<% end %>
	
	</div>

	<div class="panel-footer">
		<p>Already have an account? <%= render "devise/shared/links" %></p>
	</div>	
	
</div>
