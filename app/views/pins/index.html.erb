<div class="jumbotron j-shadow">
	<h1 class="pin-header">My pins</h1>
	
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Image</th>
					<th>Description</th>
			 	</tr>
		  </thead>

		  <tbody>
			 <% @pins.each do |pin| %>
			 	<tr>
					<td><%= image_tag pin.image.url(:thumb) %></td>
					<td><%= pin.description %></td>
					<td><%= link_to 'View', pin_path(pin) %></td>
					<% if pin.user == current_user %>
				  		<td><%= link_to 'Edit', edit_pin_path(pin) %></td>
				  		<td><%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					<% end %>
				</tr>
			 <% end %>
		  </tbody>
		</table>
	</div>
	
	<%= link_to 'New Pin', new_pin_path, class:"btn-margin btn btn-primary" %>
	
</div>
